<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="v1-01-001" author="vitalegi">
        <createTable tableName="user_data">
            <column name="user_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_data_pk"/>
            </column>
            <column name="username" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-002" author="vitalegi">
        <createTable tableName="iam_idp">
            <column name="issuer" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-003" author="vitalegi">
        <addPrimaryKey tableName="iam_idp" columnNames="issuer,subject" constraintName="pk_iam_idp"/>
    </changeSet>
    <changeSet id="v1-01-004" author="vitalegi">
        <addForeignKeyConstraint baseTableName="iam_idp"
                                 baseColumnNames="user_id"
                                 referencedTableName="user_data"
                                 referencedColumnNames="user_id"
                                 constraintName="fk_iam_idp__user__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>

    <changeSet id="v1-01-010" author="vitalegi">
        <createTable tableName="board">
            <column name="board_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="board_pk"/>
            </column>
            <column name="name" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="etag" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-01-020" author="vitalegi">
        <createTable tableName="board_user">
            <column name="board_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-021" author="vitalegi">
        <addPrimaryKey tableName="board_user" columnNames="board_id,user_id" constraintName="pk_board_user"/>
    </changeSet>
    <changeSet id="v1-01-022" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_user"
                                 baseColumnNames="board_id"
                                 referencedTableName="board"
                                 referencedColumnNames="board_id"
                                 constraintName="fk_board_user__board__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>
    <changeSet id="v1-01-023" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_user"
                                 baseColumnNames="user_id"
                                 referencedTableName="user_data"
                                 referencedColumnNames="user_id"
                                 constraintName="fk_board_user__user__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>

    <changeSet id="v1-01-030" author="vitalegi">
        <createTable tableName="board_account">
            <column name="account_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="board_account_pk"/>
            </column>
            <column name="board_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="etag" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="icon" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-031" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_account"
                                 baseColumnNames="board_id"
                                 referencedTableName="board"
                                 referencedColumnNames="board_id"
                                 constraintName="fk_board_account__board__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>

    <changeSet id="v1-01-040" author="vitalegi">
        <createTable tableName="board_category">
            <column name="category_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="board_category_pk"/>
            </column>
            <column name="board_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="etag" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="icon" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-041" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_category"
                                 baseColumnNames="board_id"
                                 referencedTableName="board"
                                 referencedColumnNames="board_id"
                                 constraintName="fk_board_category__board__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>


    <changeSet id="v1-01-050" author="vitalegi">
        <createTable tableName="board_entry">
            <column name="entry_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="board_entry_pk"/>
            </column>
            <column name="board_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="etag" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="amount" type="decimal(128, 10)">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-01-051" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_entry"
                                 baseColumnNames="board_id"
                                 referencedTableName="board"
                                 referencedColumnNames="board_id"
                                 constraintName="fk_board_entry__board__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>
    <changeSet id="v1-01-052" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_entry"
                                 baseColumnNames="account_id"
                                 referencedTableName="board_account"
                                 referencedColumnNames="account_id"
                                 constraintName="fk_board_entry__account__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>
    <changeSet id="v1-01-053" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_entry"
                                 baseColumnNames="category_id"
                                 referencedTableName="board_category"
                                 referencedColumnNames="category_id"
                                 constraintName="fk_board_entry__category__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>
    <changeSet id="v1-01-054" author="vitalegi">
        <addForeignKeyConstraint baseTableName="board_entry"
                                 baseColumnNames="last_updated_by"
                                 referencedTableName="user_data"
                                 referencedColumnNames="user_id"
                                 constraintName="fk_board_entry__user__id"
                                 deferrable="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
        />
    </changeSet>
</databaseChangeLog>
